<div class="container mt-4">
  <h1>Posts</h1>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Content</th>
        <th>Visibility</th>
        <th>Created</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= link_to p.user.display_name, admin_user_path(p.user) %></td>
          <td><%= truncate(p.content, length: 80) %></td>
          <td><%= p.visibility %></td>
          <td><%= time_ago_in_words(p.created_at) %> ago</td>
          <td><%= link_to "View", admin_post_path(p), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @posts %>
</div>


