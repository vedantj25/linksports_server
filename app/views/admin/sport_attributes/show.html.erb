<% content_for :admin_breadcrumb do %>
  <%= link_to 'Sport Attributes', admin_sport_attributes_path %> <span class="divider">/</span> <span><%= @sport_attribute.key %></span>
<% end %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Sport Attribute: <%= @sport_attribute.key %></h4>
    <div>
      <%= link_to 'Edit', edit_admin_sport_attribute_path(@sport_attribute), class: 'btn btn-primary' %>
      <%= link_to 'Back', admin_sport_attributes_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
  <dl class="row">
    <dt class="col-sm-2">Label</dt>
    <dd class="col-sm-10"><%= @sport_attribute.label %></dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10"><%= @sport_attribute.field_type %></dd>

    <dt class="col-sm-2">Options</dt>
    <dd class="col-sm-10"><%= (@sport_attribute.options || []).join(', ') %></dd>

    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10"><%= @sport_attribute.active? ? 'Yes' : 'No' %></dd>
  </dl>
</div>
