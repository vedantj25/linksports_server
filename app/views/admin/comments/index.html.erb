<% content_for :admin_breadcrumb do %>
  <span>Comments</span>
<% end %>

<div class="container-fluid">
  <h1 class="h3 mb-3">Comments</h1>
  <table class="table table-hover align-middle mt-3">
    <thead>
      <tr>
        <th><%= sort_link('id', 'ID') %></th>
        <th>User</th>
        <th>Post</th>
        <th>Content</th>
        <th><%= sort_link('created_at', 'Created') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= link_to c.user.display_name, admin_user_path(c.user) %></td>
          <td><%= link_to c.post_id, admin_post_path(c.post_id) %></td>
          <td><%= truncate(c.content, length: 80) %></td>
          <td><%= time_ago_in_words(c.created_at) %> ago</td>
          <td>
            <%= button_to "Soft Delete", soft_delete_admin_comment_path(c), method: :patch, class: "btn btn-sm btn-warning" %>
            <%= button_to "Delete", admin_comment_path(c), method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @comments %>
</div>


