<div class="container mt-4">
  <h1>Profile #<%= @profile.id %></h1>
  <p><strong>User:</strong> <%= link_to @profile.user.display_name, admin_user_path(@profile.user) %></p>
  <p><strong>Type:</strong> <%= @profile.type %></p>
  <p><strong>Display Name:</strong> <%= @profile.display_name %></p>
  <p><strong>City:</strong> <%= @profile.location_city %></p>

  <div class="mt-4">
    <h3>Edit</h3>
    <%= form_with model: [:admin, @profile], local: true do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :display_name %>
          <%= f.text_field :display_name, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :location_city %>
          <%= f.text_field :location_city, class: "form-control" %>
        </div>
        <div class="col-12">
          <%= f.label :bio %>
          <%= f.text_area :bio, rows: 6, class: "form-control" %>
        </div>
      </div>
      <div class="mt-3">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>


