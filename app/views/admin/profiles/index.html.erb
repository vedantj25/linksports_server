<% content_for :admin_breadcrumb do %>
  <span>Profiles</span>
<% end %>

<div class="container-fluid">
  <h1 class="h3 mb-3">Profiles</h1>
  <div class="admin-table-wrapper">
  <table class="table table-hover align-middle mt-3 admin-table-sticky">
    <thead>
      <tr>
        <th class="td-nowrap"><%= sort_link('id', 'ID') %></th>
        <th class="td-nowrap">User</th>
        <th class="td-nowrap"><%= sort_link('type', 'Type') %></th>
        <th class="td-nowrap"><%= sort_link('display_name', 'Display Name') %></th>
        <th class="td-nowrap"><%= sort_link('location_city', 'City') %></th>
        <th class="td-nowrap"><%= sort_link('created_at', 'Created') %></th>
        <th class="td-nowrap"></th>
      </tr>
    </thead>
    <tbody>
      <% @profiles.each do |p| %>
        <tr>
          <td class="td-nowrap"><%= p.id %></td>
          <td class="td-nowrap"><%= link_to p.user.display_name, admin_user_path(p.user) %></td>
          <td class="td-nowrap"><%= p.type %></td>
          <td class="td-truncate"><%= p.display_name %></td>
          <td class="td-nowrap"><%= p.location_city %></td>
          <td class="td-nowrap"><%= time_ago_in_words(p.created_at) %> ago</td>
          <td class="td-nowrap"><%= link_to "View", admin_profile_path(p), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= paginate @profiles %>
</div>


