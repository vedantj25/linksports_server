<%= form_with model: [:admin, sport], local: true do |f| %>
  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :category %>
      <%= f.text_field :category, class: "form-control" %>
    </div>
    <div class="col-12">
      <div class="form-check mt-2">
        <%= f.check_box :active, class: "form-check-input", id: "sport_active" %>
        <%= f.label :active, class: "form-check-label", for: "sport_active" %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>


