<%= form_with model: [:admin, @user, @user_sport, tournament], local: true do |f| %>
  <% if tournament.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% tournament.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="form-floating">
        <%= f.text_field :tournament_name, class: 'form-control', placeholder: 'Tournament Name' %>
        <%= f.label :tournament_name %>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <div class="form-floating">
        <%= f.number_field :year, class: 'form-control', placeholder: 'Year (e.g., 2022)', min: 1900, max: 2100 %>
        <%= f.label :year %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <div class="form-floating">
      <%= f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 4, style: 'height: 120px;' %>
      <%= f.label :description %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_user_user_sport_tournaments_path(@user, @user_sport), class: 'btn btn-outline-secondary' %>
  </div>
<% end %>


