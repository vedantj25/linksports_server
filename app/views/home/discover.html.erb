<%# Discover Page %>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="text-center mb-5">
        <h1 class="display-4">Discover Athletes & Coaches</h1>
        <p class="lead text-muted">Connect with talented individuals across various sports disciplines</p>
      </div>
      
      <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 text-center p-3">
            <i class="fas fa-search fa-3x text-primary mb-3"></i>
            <h5>Search Profiles</h5>
            <p class="text-muted">Find athletes and coaches by sport, location, or skill level</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 text-center p-3">
            <i class="fas fa-filter fa-3x text-success mb-3"></i>
            <h5>Filter Results</h5>
            <p class="text-muted">Narrow down results by age, experience, achievements</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 text-center p-3">
            <i class="fas fa-eye fa-3x text-warning mb-3"></i>
            <h5>View Profiles</h5>
            <p class="text-muted">Explore detailed profiles with photos, videos, and achievements</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="card border-0 text-center p-3">
            <i class="fas fa-handshake fa-3x text-info mb-3"></i>
            <h5>Connect</h5>
            <p class="text-muted">Send messages and build meaningful sports relationships</p>
          </div>
        </div>
      </div>
      
      <% if user_signed_in? %>
        <div class="search-section mb-5">
          <div class="card">
            <div class="card-body">
              <h4>Search Profiles</h4>
              <form class="row g-3">
                <div class="col-md-4">
                  <input type="text" class="form-control" placeholder="Search by name...">
                </div>
                <div class="col-md-3">
                  <select class="form-select">
                    <option value="">All Sports</option>
                    <% Sport.active.each do |sport| %>
                      <option value="<%= sport.id %>"><%= sport.name %></option>
                    <% end %>
                  </select>
                </div>
                <div class="col-md-3">
                  <select class="form-select">
                    <option value="">All Roles</option>
                    <option value="player">Athletes</option>
                    <option value="coach">Coaches</option>
                    <option value="club">Clubs</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <% if @featured_profiles.any? %>
          <h3 class="mb-4">Featured Profiles</h3>
          <div class="row g-4">
            <% @featured_profiles.each do |profile| %>
              <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <% if profile.user.avatar.attached? %>
                        <%= image_tag profile.user.avatar, alt: profile.user.display_name, class: "rounded-circle", style: "width: 80px; height: 80px; object-fit: cover;" %>
                      <% else %>
                        <i class="fas fa-user-circle fa-5x text-muted"></i>
                      <% end %>
                    </div>
                    <h5 class="card-title"><%= profile.user.display_name %></h5>
                    <p class="text-muted"><%= profile.user_type.humanize %></p>
                    <% if profile.sports.any? %>
                      <div class="mb-3">
                        <% profile.sports.limit(3).each do |sport| %>
                          <span class="badge bg-primary me-1"><%= sport.name %></span>
                        <% end %>
                      </div>
                    <% end %>
                    <%= link_to "View Profile", profile_path(profile), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h4>No profiles found</h4>
            <p class="text-muted">Be the first to create a profile and start building your sports network!</p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Sign in to discover profiles</strong> and connect with athletes, coaches, and clubs.
          </div>
          <div class="d-flex justify-content-center gap-3">
            <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
            <%= link_to "Join Now", new_user_registration_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
