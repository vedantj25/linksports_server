<%# Simplified Dashboard: Only Feed %>
<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-header d-flex align-items-center">
          <i class="fas fa-stream me-2"></i>
          <h5 class="mb-0">Your Feed</h5>
        </div>
        <div class="card-body border-bottom">
          <%= form_with url: posts_path, scope: :post, method: :post, local: true do |f| %>
            <div class="mb-2">
              <%= f.text_area :content, class: "form-control", placeholder: "Share an update...", rows: 3 %>
            </div>
            <div class="d-flex align-items-center gap-2">
              <%= f.select :visibility, [["Public", 0], ["Connections", 1], ["Private", 2]], {}, class: "form-select form-select-sm w-auto" %>
              <%= f.collection_select :sport_id, Sport.active.order(:name), :id, :name, { include_blank: "Any sport" }, class: "form-select form-select-sm w-auto" %>
              <%= f.submit "Post", class: "btn btn-primary btn-sm ms-auto" %>
            </div>
          <% end %>
        </div>
        <div class="list-group list-group-flush">
          <% if @feed_posts.present? %>
            <% @feed_posts.each_with_index do |post, index| %>
              <div class="list-group-item">
                <div class="d-flex">
                  <div class="me-3">
                    <% if post.user.profile&.profile_image&.attached? %>
                      <%= image_tag post.user.profile.profile_image, class: "rounded-circle", style: "width: 44px; height: 44px; object-fit: cover;" %>
                    <% else %>
                      <i class="fas fa-user-circle fa-2x text-muted"></i>
                    <% end %>
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong><%= post.user.display_name %></strong>
                        <small class="text-muted ms-2">@<%= post.user.username %></small>
                      </div>
                      <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
                    </div>
                    <div class="mt-2">
                      <%= simple_format(h(post.content)) %>
                    </div>
                    <div class="mt-2 d-flex gap-3 text-muted">
                      <span><i class="far fa-thumbs-up me-1"></i><%= post.likes_count || 0 %></span>
                      <span><i class="far fa-comment me-1"></i><%= post.comments_count || 0 %></span>
                      <% if post.visibility == "connections_only" %>
                        <span class="badge bg-secondary">Connections</span>
                      <% elsif post.visibility == "private_post" %>
                        <span class="badge bg-dark">Private</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

              <%# Sponsored insertion disabled for now %>
              <% if false && (index + 1) % 5 == 0 %>
                <div class="list-group-item">
                  <div class="card border-0 bg-light">
                    <div class="card-body d-flex align-items-center">
                      <i class="fas fa-bullhorn text-primary me-3"></i>
                      <div>
                        <strong>Sponsored</strong>
                        <div class="text-muted small">Promote your club or training program here.</div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="list-group-item text-center text-muted py-5">
              <i class="fas fa-stream fa-3x mb-3 opacity-50"></i>
              <p>Your feed is empty. Follow sports and connect with others to see posts.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
