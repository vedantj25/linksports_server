<div class="container-fluid">
  <div class="row">
    <!-- Profile Header -->
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-2 text-center">
              <div class="profile-avatar">
<%= profile_avatar(@profile, size: 120) %>
              </div>
            </div>
            <div class="col-md-10">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h2 class="mb-1"><%= @profile.display_name %></h2>
                  <p class="text-muted mb-2">
                    <i class="fas fa-user-tag me-2"></i>
                    <%= @user.user_type.titleize %>
                  </p>
                  <% if @profile.location_city.present? %>
                    <p class="text-muted mb-2">
                      <i class="fas fa-map-marker-alt me-2"></i>
                      <%= @profile.location_city %><%= ", #{@profile.location_state}" if @profile.location_state.present? %>
                    </p>
                  <% end %>
                  <% if @profile.is_a?(PlayerProfile) && @profile.availability.present? %>
                    <p class="mb-2">
                      <span class="badge bg-<%= @profile.availability == 'available' ? 'success' : 'warning' %>">
                        <%= @profile.availability.titleize %>
                      </span>
                    </p>
                  <% end %>
                  <% if @profile.bio.present? %>
                    <p class="mb-0"><%= truncate(@profile.bio, length: 150) %></p>
                  <% end %>
                </div>
                <div class="d-flex gap-2">
                  <% if @is_own_profile %>
                    <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-primary" %>
                    <div class="btn-group">
                      <button class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-share me-2"></i>Share My Profile
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareProfile('<%= public_profile_url(username: @user.username) %>', '<%= @meta_title || @profile.display_name %>')">
                            <i class="fas fa-link me-2"></i>Copy Link
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToWhatsApp('<%= public_profile_url(username: @user.username) %>', 'Check out my LinkSports profile!')">
                            <i class="fab fa-whatsapp me-2 text-success"></i>WhatsApp
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToTwitter('<%= public_profile_url(username: @user.username) %>', 'Check out my LinkSports profile!')">
                            <i class="fab fa-twitter me-2 text-info"></i>Twitter
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToLinkedIn('<%= public_profile_url(username: @user.username) %>')">
                            <i class="fab fa-linkedin me-2 text-primary"></i>LinkedIn
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToFacebook('<%= public_profile_url(username: @user.username) %>')">
                            <i class="fab fa-facebook me-2 text-primary"></i>Facebook
                          </a>
                        </li>
                      </ul>
                    </div>
                  <% else %>
                    <button class="btn btn-outline-primary">
                      <i class="fas fa-user-plus me-2"></i>Connect
                    </button>
                    <div class="btn-group">
                      <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-share me-2"></i>Share
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareProfile('<%= public_profile_url(username: @user.username) %>', '<%= @meta_title || @profile.display_name %>')">
                            <i class="fas fa-link me-2"></i>Copy Link
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToWhatsApp('<%= public_profile_url(username: @user.username) %>', 'Check out <%= @profile.display_name %> on LinkSports!')">
                            <i class="fab fa-whatsapp me-2 text-success"></i>WhatsApp
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToTwitter('<%= public_profile_url(username: @user.username) %>', 'Check out <%= @profile.display_name %> on LinkSports!')">
                            <i class="fab fa-twitter me-2 text-info"></i>Twitter
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToLinkedIn('<%= public_profile_url(username: @user.username) %>')">
                            <i class="fab fa-linkedin me-2 text-primary"></i>LinkedIn
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="javascript:void(0)" onclick="shareToFacebook('<%= public_profile_url(username: @user.username) %>')">
                            <i class="fab fa-facebook me-2 text-primary"></i>Facebook
                          </a>
                        </li>
                      </ul>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
      <!-- About Section -->
      <% if @profile.bio.present? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-info-circle me-2"></i>About
            </h5>
          </div>
          <div class="card-body">
            <p class="mb-0"><%= simple_format(@profile.bio) %></p>
          </div>
        </div>
      <% end %>

      <!-- Sports Section -->
      <% if @user_sports.any? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-medal me-2"></i>Sports
            </h5>
          </div>
          <div class="card-body">
            <div class="row">
              <% @user_sports.each do |user_sport| %>
                <div class="col-md-6 mb-3">
                  <div class="sport-card p-3 border rounded">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <h6 class="mb-1">
                          <%= user_sport.sport.name %>
                          <% if user_sport.primary? %>
                            <span class="badge bg-primary ms-1">Primary</span>
                          <% end %>
                        </h6>
                        <% selected_position = begin
                             val = user_sport.details.is_a?(Hash) ? user_sport.details["position"] : nil
                             if val.is_a?(Array)
                               val.reject(&:blank?).join(', ')
                             else
                               val.presence
                             end
                           end %>
                        <% if selected_position.present? || user_sport.position.present? %>
                          <p class="text-muted small mb-1">Position: <%= selected_position || user_sport.position %></p>
                        <% end %>
                        <p class="text-muted small mb-0">
                          <%= pluralize(user_sport.years_experience, 'year') %> experience
                        </p>
                        <% if user_sport.details.present? %>
                          <ul class="small mt-2 mb-0">
                            <% user_sport.details.each do |k, v| %>
                              <% next if v.blank? %>
                              <li><strong><%= k.to_s.humanize %>:</strong> <%= v.is_a?(Array) ? v.join(', ') : v %></li>
                            <% end %>
                          </ul>
                        <% end %>
                        <% if user_sport.user_sport_affiliations.any? %>
                          <div class="mt-3">
                            <h6 class="small text-muted mb-1"><i class="fas fa-briefcase me-1"></i>Club / Team History</h6>
                            <ul class="small mb-0">
                              <% user_sport.user_sport_affiliations.order(Arel.sql("current DESC, COALESCE(end_year, 9999) DESC, COALESCE(start_year, 0) DESC")).each do |aff| %>
                                <li>
                                  <strong><%= aff.club_team_name %></strong>
                                  <% if aff.league_competition.present? %> â€” <%= aff.league_competition %><% end %>
                                  <% duration = aff.pretty_duration %>
                                  <% if duration.present? %>
                                    (<%= duration %>)
                                  <% end %>
                                </li>
                              <% end %>
                            </ul>
                          </div>
                        <% end %>
                        <% if user_sport.user_sport_tournaments.any? %>
                          <div class="mt-3">
                            <h6 class="small text-muted mb-1"><i class="fas fa-trophy me-1"></i>Tournaments</h6>
                            <% tournaments_sorted = user_sport.user_sport_tournaments.order(year: :desc) %>
                            <ul class="small mb-0">
                              <% tournaments_sorted.each do |t| %>
                                <li>
                                  <strong><%= t.tournament_name %></strong>
                                  <% if t.year.present? %> â€” <%= t.year %><% end %>
                                  <% if t.description.present? %>
                                    <ul class="small mb-0">
                                      <li><%= t.description %></li>
                                    </ul>
                                  <% end %>
                                </li>
                              <% end %>
                            </ul>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Grouped sections removed; affiliations and tournaments are shown per sport above -->

      <!-- Type-specific sections -->
      <%= render "profiles/#{@user.user_type}_details", profile: @profile if @profile.type %>

      <!-- Media Gallery -->
      <% if (@profile.photos.attached? && @profile.photos.count > 0) || (@profile.highlight_videos.present?) || (@profile.media_links.present?) %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-photo-film me-2"></i>Media Gallery
            </h5>
          </div>
          <div class="card-body">
            <% if @profile.photos.attached? && @profile.photos.count > 0 %>
              <div class="row mb-3">
                <% @profile.photos.each do |photo| %>
                  <div class="col-6 mb-3">
                    <%= image_tag photo.variant(resize_to_fill: [600, 400]) rescue image_tag(photo, class: "img-fluid rounded") %>
                  </div>
                <% end %>
              </div>
            <% end %>

            <% if @profile.highlight_videos.present? %>
              <div class="mb-3">
                <h6>Highlight Videos</h6>
                <ul class="mb-0">
                  <% @profile.highlight_videos.each do |url| %>
                    <li><%= link_to url, url, target: "_blank", rel: "noopener" %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <% if @profile.media_links.present? %>
              <div>
                <h6>Interviews / Media Coverage</h6>
                <ul class="mb-0">
                  <% @profile.media_links.each do |url| %>
                    <li><%= link_to url, url, target: "_blank", rel: "noopener" %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Contact Info -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="fas fa-address-book me-2"></i>Contact Info
          </h6>
        </div>
        <div class="card-body">
          <% if @profile.website_url.present? %>
            <p class="mb-2">
              <i class="fas fa-globe me-2 text-muted"></i>
              <%= link_to @profile.website_url, @profile.website_url, target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>
          <% if @profile.instagram_url.present? %>
            <p class="mb-2">
              <i class="fab fa-instagram me-2 text-muted"></i>
              <%= link_to "Instagram", @profile.instagram_url, target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>
          <% if @profile.youtube_url.present? %>
            <p class="mb-0">
              <i class="fab fa-youtube me-2 text-muted"></i>
              <%= link_to "YouTube", @profile.youtube_url, target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>
          <% if @profile.linkedin_url.present? %>
            <p class="mb-0 mt-2">
              <i class="fab fa-linkedin me-2 text-muted"></i>
              <%= link_to "LinkedIn", @profile.linkedin_url, target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Stats -->
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="fas fa-chart-line me-2"></i>Stats
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-4">
              <div class="stat-item">
                <h5 class="mb-0"><%= @user.posts_count %></h5>
                <small class="text-muted">Posts</small>
              </div>
            </div>
            <div class="col-4">
              <div class="stat-item">
                <h5 class="mb-0"><%= @user.connections_count %></h5>
                <small class="text-muted">Connections</small>
              </div>
            </div>
            <div class="col-4">
              <div class="stat-item">
                <h5 class="mb-0"><%= @user_sports.count %></h5>
                <small class="text-muted">Sports</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
