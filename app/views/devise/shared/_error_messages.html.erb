<% if resource.errors.any? %>
  <div class="alert alert-danger mb-4" role="alert" data-turbo-cache="false">
    <div class="d-flex align-items-center mb-2">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <strong>
        <%= pluralize(resource.errors.count, "error") %> 
        prohibited this <%= resource.class.model_name.human.downcase %> from being saved:
      </strong>
    </div>
    <ul class="mb-0 ps-3">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
