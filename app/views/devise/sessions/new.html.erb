<div class="container-fluid bg-light min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <!-- Logo and Header -->
            <div class="text-center mb-4">
              <h3 class="fw-bold text-primary">
                <i class="fas fa-trophy me-2"></i>
                Welcome Back
              </h3>
              <p class="text-muted">Sign in to your LinkSports account</p>
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
              <div class="mb-3">
                <div class="form-floating">
                  <%= f.text_field :login, class: "form-control", placeholder: "Email or Username", autofocus: true %>
                  <%= f.label :login, "Email or Username" %>
                </div>
              </div>

              <div class="mb-3">
                <div class="form-floating">
                  <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
                  <%= f.label :password %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="mb-3">
                  <div class="form-check">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, class: "form-check-label" %>
                  </div>
                </div>
              <% end %>

              <div class="d-grid mb-3">
                <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= link_to "Forgot your password?", new_user_password_path, class: "text-primary text-decoration-none" %>
            </div>

            <!-- Divider -->
            <div class="text-center mt-4">
              <hr class="my-4">
              <p class="text-muted">
                Don't have an account? 
                <%= link_to "Sign Up", new_user_registration_path, class: "text-primary fw-bold text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
