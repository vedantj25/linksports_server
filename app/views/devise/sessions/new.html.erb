<div class="container-fluid bg-light min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <!-- Logo and Header -->
            <div class="text-center mb-4">
              <h3 class="fw-bold text-primary">
                <i class="fas fa-trophy me-2"></i>
                Welcome Back
              </h3>
              <p class="text-muted">Sign in to your LinkSports account</p>
            </div>

            <!-- Login Type Tabs -->
            <ul class="nav nav-pills nav-justified mb-4" id="loginTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="phone-tab" data-bs-toggle="pill" data-bs-target="#phone-login" type="button" role="tab">
                  <i class="fas fa-mobile-alt me-2"></i>Phone
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="email-tab" data-bs-toggle="pill" data-bs-target="#email-login" type="button" role="tab">
                  <i class="fas fa-envelope me-2"></i>Email
                </button>
              </li>
            </ul>

            <div class="tab-content" id="loginTabsContent">
              <!-- Phone Login -->
              <div class="tab-pane fade show active" id="phone-login" role="tabpanel">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "phone-login-form" }) do |f| %>
                  <div class="mb-3">
                    <div class="form-floating">
                      <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone Number", autofocus: true %>
                      <%= f.label :phone %>
                    </div>
                  </div>

                  <div class="d-grid mb-3">
                    <%= f.submit "Send Verification Code", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>
                
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  We'll send a verification code to your phone number
                </div>
              </div>

              <!-- Email/Password Login -->
              <div class="tab-pane fade" id="email-login" role="tabpanel">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "email-login-form" }) do |f| %>
                  <div class="mb-3">
                    <div class="form-floating">
                      <%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>
                      <%= f.label :email %>
                    </div>
                  </div>

                  <div class="mb-3">
                    <div class="form-floating">
                      <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
                      <%= f.label :password %>
                    </div>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="mb-3">
                      <div class="form-check">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                      </div>
                    </div>
                  <% end %>

                  <div class="d-grid mb-3">
                    <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>
                
                <div class="text-center">
                  <%= link_to "Forgot your password?", new_user_password_path, class: "text-primary text-decoration-none" %>
                </div>
              </div>
            </div>

            <!-- Divider -->
            <div class="text-center mt-4">
              <hr class="my-4">
              <p class="text-muted">
                Don't have an account? 
                <%= link_to "Sign Up", new_user_registration_path, class: "text-primary fw-bold text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
