<div class="container-fluid bg-light min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <div class="text-center mb-4">
              <h3 class="fw-bold text-primary">
                <i class="fas fa-key me-2"></i>
                Forgot your password?
              </h3>
              <p class="text-muted">Enter your email to receive reset instructions</p>
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), local: true, html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="mb-3">
                <div class="form-floating">
                  <%= f.email_field :email, class: "form-control", placeholder: "Email Address", autofocus: true, autocomplete: "email", required: true %>
                  <%= f.label :email %>
                </div>
              </div>

              <div class="d-grid mb-3">
                <%= f.submit "Send reset instructions", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= link_to "Back to Sign In", new_user_session_path, class: "text-primary text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
