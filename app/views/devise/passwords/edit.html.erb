<div class="container-fluid bg-light min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <div class="text-center mb-4">
              <h3 class="fw-bold text-primary">
                <i class="fas fa-lock me-2"></i>
                Change your password
              </h3>
              <p class="text-muted">Enter a new password for your account</p>
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), local: true, html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="mb-3">
                <div class="form-floating">
                  <%= f.password_field :password, class: "form-control", placeholder: "New password", autofocus: true, autocomplete: "new-password", required: true %>
                  <%= f.label :password, "New password" %>
                </div>
                <% if @minimum_password_length %>
                  <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
                <% end %>
              </div>

              <div class="mb-3">
                <div class="form-floating">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password", autocomplete: "new-password", required: true %>
                  <%= f.label :password_confirmation, "Confirm new password" %>
                </div>
              </div>

              <div class="d-grid mb-3">
                <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= link_to "Back to Sign In", new_user_session_path, class: "text-primary text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
